{% extends 'base.html.twig' %}

{% block title %}La boutique{% endblock %}

{% block body %}
<div class="shop_container">
    <h1>{{title}}</h1>
     {% for item in items %}
        <div class="card">
            <h2>{{item.name}}</h2>  
            <img src="{{ asset('/upload/images/' ~ item.file)}}" alt="photo produit" width="150" height="210">
            {{item.ingredients}}
            {{item.volume}}
            <small>{{item.categories}}</small>
            {{item.price}}
        </div>
        
    {% endfor %} 
</div>
    
    
  


{% endblock %}
