{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<h1>Récapitulatif de votre panier</h1>
    <div class="container">
        {% if items | length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>photo</th>
                    <th>Prix</th>
                    <th>Quantité</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.produit.name| upper}}</td>
                        <td><img src="{{ asset('/upload/images/' ~ item.produit.file)}}" alt="photo de l'article"  width="75" height="100"></td>
                        <td>{{ (item.produit.price)/ 100}}</td>
                        <td>{{ item.quantity}}</td>
                        <td>{{item.quantity * ((item.produit.price)/ 100)}}</td>
                        <td>
                            <a href="#" ><button class="delete" style="margin: 1.2rem;" type="submit"><i class="fas fa-trash-alt"></i></button></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td  colspan="3"> Total: </td>
                    <td></td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
    {% else %}
        <p>Votre panier est vide</p>
    {% endif %}

    </div>
    
{% endblock %}
