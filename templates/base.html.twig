        <meta charset="UTF-8">
        <link rel="stylesheet" href="{{ asset('css/style.css')}}">
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100&display=swap" 
        rel="stylesheet">
        <title>{% block title %}Welcome!{% endblock %}</title>
       
